{
  "name": "mlack",
  "version": "1.0.0",
  "description": "A slack-like app experiment",
  "main": "hono/index.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite build --watch",
    "dev:server": "tsx watch hono/index.ts",
    "build": "npm run build:client && tsc --project tsconfig.prod.json",
    "build:client": "vite build",
    "build:check": "tsc --noEmit",
    "start": "tsx hono/index.ts",
    "start:prod": "node dist/hono/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "keywords": [
    "hono",
    "slack",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "@hono/node-ws": "^1.2.0",
    "hono": "^4.8.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@playwright/test": "^1.53.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.10",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.0",
    "jsdom": "^26.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.3",
    "vitest": "^3.2.4"
  }
}
